  <div class="field">
    <%= f.label :bus_route %><br />
    <%= f.text_field :bus_route %>
  </div>
  <div class="field">
    <%= f.label :stop %><br />
    <%= f.text_field :stop %>
  </div>
  <div class="field">
    <%= f.label :first_alert %><br />
    <%= f.password_field :first_alert %>
  </div>
  <div class="field">
    <%= f.label :second_alert %><br />
    <%= f.password_field :second_alert %>
  </div>
  <div class="actions">
